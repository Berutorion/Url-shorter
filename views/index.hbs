{{#if short}}

  <h2>Success! Please use this url</h2>
  <p>"http://localhost:3000/{{short}}"</p>

{{else}}
  <form class="input-group mt-3" action="/short/create" method="POST">
    <input
      class="form-control"
      type="text"
      name="url"
      placeholder="input URL here"
    />
    <button class="btn btn-primary" type="submit">Shorten</button>
  </form>
{{/if}}